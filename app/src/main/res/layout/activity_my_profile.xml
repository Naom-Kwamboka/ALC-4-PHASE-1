<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfile">
    
    
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/naom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Naom Kwamboka"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginTop="0dp"
        android:text="Track   :Android "
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@android:color/black"
        tools:ignore="MissingConstraints"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/track"
        android:layout_marginTop="10dp"
        android:text="Country   :Kenya "
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@android:color/black"
        tools:ignore="MissingConstraints"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/country"
        android:layout_marginTop="10dp"
        android:text="Email   :naomkwamboka@hotmail.com "
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@android:color/black"
        tools:ignore="MissingConstraints"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginTop="10dp"
        android:text="Contact  :+254 701223338 "
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@android:color/black"
        tools:ignore="MissingConstraints"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/slackname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/contact"
        android:layout_marginTop="10dp"
        android:text="SlackName   :Naom Kwamboka "
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@android:color/black"
        tools:ignore="MissingConstraints"
        android:textSize="22sp"/>







</androidx.constraintlayout.widget.ConstraintLayout>